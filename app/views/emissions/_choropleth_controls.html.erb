<%= form_for :choropleth_params, url: choropleth_data_emissions_path,
    remote: true, method: 'get', data: {type: :json},
    html: {class: "navbar-form navbar-left"} do |f| %>

  <div class="form-group">
    <div class="year-slider ankle-boots"></div>
    <%= f.label :year, 'Year:' %>
    <%= f.text_field :year, class: 'transparent', readonly: true %>
  </div>

  <div class="form-group">
    <%= f.select :scenario_id, select_options_for_factor(@scenarios, false), {}, {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.select :fuel_type_ids, select_options_for_factor(@fuel_types, 0), {}, {class: 'form-control', multiple: true} %>
  </div>

  <div class="form-group">
    <%= f.select :sector_ids, select_options_for_factor(all_sectors_but_transportation, 0), {}, {class: 'form-control',
      multiple: true} %>
  </div>

  <%= f.submit 'Map!', class: "btn btn-danger" %>

<% end %>